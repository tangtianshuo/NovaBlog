# 前端生产Dockerfile - 使用Vite预览服务器（与现有部署一致）
FROM node:20-alpine

WORKDIR /app

# 复制package文件
COPY package*.json ./
RUN npm ci

# 复制源代码
COPY . .

# 构建参数 - 生产环境变量
ARG VITE_BASE_PATH=/
ARG VITE_API_BASE=/api
ARG VITE_API_URL=http://backend:3001

ENV VITE_BASE_PATH=${VITE_BASE_PATH}
ENV VITE_API_BASE=${VITE_API_BASE}
ENV VITE_API_URL=${VITE_API_URL}

# 构建Vue.js前端
RUN npm run build

EXPOSE 8080

# 使用Vite预览服务器（与现有部署一致）
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "8080"]